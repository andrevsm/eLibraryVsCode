@model List<eLibrary1.Models.Editora>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{ 
    var user = await UserManager.GetUserAsync(User);
}

<div class="container" style="text-align: center">
    <h1>Editoras</h1>
</div>

<table class="table table-hover">
    <thead>
        <th style="text-align: center">ID</th>
        <th style="text-align: center">Nome</th>
    </thead>
    <tbody style="text-align: center">
        @foreach(var editora in Model){
            <tr>
                <td>@editora.EditoraID</td>
                <td>@editora.Nome</td>
                <td>
                    @if (user != null){
                        @if (user.IsAdministrator == true){
                            <div class="btn-group">
                                <a href="/Editoras/Edit/@editora.EditoraID" class="btn btn-success ">Editar</a>
                                <a data-myval="/Editoras/Delete/@editora.EditoraID" href="" id="btnExcluir" data-toggle="modal" data-target="#confirm-delete" class="btn btn-danger">Excluir</a>
                            </div>
                        }
                    }                  
                </td>
            </tr>
        }
    </tbody>
</table>

@if (user != null){
    @if (user.IsAdministrator == true){
        <div class="container" style="text-align: center">
            <h3 style="text-align: left">Total: @Model.Count()</h3>
            <a href="/Editoras/Create" class="btn btn-primary">Cadastrar Editora</a>
        </div>
    }
}
    
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" > 
    <div class="modal-dialog" role="document"> 
        <div class="modal-content"> 
            <div class="modal-header"> 
                <h4 class="modal-title" >Excluir</h4> 
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">×</span>
                </button>
            </div> 
            <div class="modal-body"> 
                <p>A Editora será excluída.</p> 
                <p>Deseja continuar?</p> 
            </div> 
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Não</button> 
                <a class="btn btn-danger btn-excluir" id="excluir" href="">Sim</a> 
            </div> 
        </div>
    </div>
</div>

@section scripts {
   <script>
        $("#btnExcluir").click(function(){
            var id = $("#btnExcluir").data('myval');
            $(".btn-excluir").attr("href", id);
        });        
   </script>
}